openapi: 3.0.0
info:
  title: LangchainDocsFetcher API
  description: API for fetching Langchain documentation and navigating the site map.
  version: "1.0"
servers:
  - url: https://langchainapi-lv8z.onrender.com
    description: Development server
paths:
  /api/v1/fetch_docs:
    get:
      summary: Fetch documents from a specified URL
      operationId: fetchDocs
      parameters:
        - name: url
          in: query
          required: true
          description: The URL from which to fetch documents
          schema:
            type: string
      responses:
        '200':
          description: Successful operation
          content:
            application/json:
              schema:
                type: object
                properties:
                  content:
                    type: string
                    description: The content of the document
        '404':
          description: Document not found
  /api/v1/get_sitemap:
    get:
      summary: Get the site map for a specified URL
      operationId: getSitemap
      parameters:
        - name: url
          in: query
          required: true
          description: The base URL for which to get the sitemap
          schema:
            type: string
      responses:
        '200':
          description: Successful operation
          content:
            application/json:
              schema:
                type: object
                properties:
                  sitemap:
                    type: array
                    items:
                      type: object
                      properties:
                        url:
                          type: string
                          description: The URL of the documentation page
                        title:
                          type: string
                          description: The title of the documentation page
                    description: A list of available documentation endpoints with titles
components:
  securitySchemes:
    ApiKeyAuth:
      type: apiKey
      in: header
      name: X-API-KEY
  schemas: # Ensure this section is correctly defined as an object
    ExampleSchema: # Example schema definition
      type: object
      properties:
        exampleField:
          type: string
          description: "This is an example field."
security:
  - ApiKeyAuth: []